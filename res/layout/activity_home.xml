<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blackorchid"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/logo"
            android:layout_width="300dp"
            android:layout_height="130dp"
            android:src="@drawable/sym1" />
        
    </LinearLayout>

    <Button
        android:id="@+id/create"
        android:layout_width="210dp"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:background="@layout/mybutton"
        android:gravity="center"
        android:onClick="createF"
        android:text="CREATE FENCES"
        android:textColor="#003399"
        android:textSize="20sp" />

    <Button
        android:id="@+id/display"
        android:layout_width="210dp"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@layout/mybutton"
        android:gravity="center"
        android:onClick="displayF"
        android:text="DISPLAY FENCES"
        android:textColor="#003399"
        android:textSize="20sp" />

    <Button
        android:id="@+id/delete"
        android:layout_width="210dp"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@layout/mybutton"
        android:gravity="center"
        android:onClick="deleteF"
        android:text="DELETE FENCES"
        android:textColor="#003399"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="85dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/logged"
            android:layout_width="wrap_content"
            android:layout_height="30dip"
            android:layout_marginTop="2dip"
            android:orientation="horizontal"
            android:text="Signed In"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <Button
            android:id="@+id/logout"
            android:layout_width="wrap_content"
            android:layout_height="30dip"
            android:layout_marginLeft="5dp"
            android:onClick="logoutF"
            android:orientation="horizontal"
            android:text="(LOGOUT)"
            android:textColor="#FF0000"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:background="@android:color/transparent" />
    </LinearLayout>

</LinearLayout>