<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:isScrollContainer="false"
    android:fillViewport="true" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff" >

        <LinearLayout
            android:id="@+id/header"
            android:layout_width="fill_parent"
            android:layout_height="75dp"
            android:background="#494949"
            android:orientation="horizontal"
            android:paddingBottom="5dip"
            android:paddingTop="10dip" >

           <ImageView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dip"
                android:src="@drawable/sym1" />
 
        </LinearLayout>

        <LinearLayout
            android:id="@+id/footer"
            android:layout_width="fill_parent"
            android:layout_height="210dip"
            android:layout_alignParentBottom="true"
            android:background="@drawable/footer2"
            android:orientation="horizontal" >
        </LinearLayout>
 
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/header"
            android:orientation="vertical"
            android:padding="10dip" >

            <TextView
               
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:text="Username"
                android:textColor="#372c24"
                android:textSize="18sp" />

            <EditText
                 android:id="@+id/uname"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@layout/edittext_style"
                android:textColorHint="#bbbbbb"
                android:padding="10dp"
                android:drawableLeft="@drawable/users"
                android:layout_marginBottom="20dip"
                android:layout_marginTop="5dip"
                android:drawablePadding="10dp"
                android:singleLine="true" />
  
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Password"
                android:textColor="#372c24"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/pswd"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@layout/edittext_style"
                android:textColorHint="#bbbbbb"
                android:padding="10dp"
                android:drawableLeft="@drawable/ssl"
                android:layout_marginTop="5dip"
                android:drawablePadding="10dp"
                android:singleLine="true" 
                android:inputType="textPassword"/>"
 
           <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dip"
            android:weightSum="1"
            android:orientation="horizontal" >
            <Button
                android:id="@+id/btnLogin"
                android:layout_width="220dp"
                android:layout_height="48dp"
                android:layout_gravity="center_horizontal"
                android:background="@layout/loginbutton"
                android:gravity="center"
                android:layout_margin="2dp"
                android:layout_weight="0.5"
                android:text="Login"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="22sp"
                android:onClick="login" />
            <Button
                android:id="@+id/btnSkipLogin"
                android:layout_width="220dp"
                android:layout_height="48dp"
                android:layout_gravity="center_horizontal"
                android:background="@layout/loginbutton"
                android:gravity="center"
                android:layout_margin="2dp"
                android:layout_weight="0.5"
                android:text="Skip Login"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="22sp"
                android:onClick="skip"  />
        </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

</ScrollView>